<Window x:Class="Exercise3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise3"
        mc:Ignorable="d"
        Title="Grow and shrink" Height="250" Width="730">
    <Grid>
        <RepeatButton Content="Grow" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="70" Click="GrowButton_Click"/>
        <RepeatButton Content="Shrink" HorizontalAlignment="Left" Margin="90,20,0,0" VerticalAlignment="Top" Width="70" Click="ShrinkButton_Click"/>

        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 50 0 0"
                Height="175" Width="710" Name="paperCanvas"
                Background="LightGray">
            <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                       Height="100" Width="100" Name="theRectangle"
                       Stroke="Black" Fill="Orange"/>
        </Canvas>

    </Grid>
</Window>
